# FHQ Market System Dashboard - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# SUPABASE / POSTGRESQL CONNECTION
# ============================================================================
# Local PostgreSQL via Docker (default for development)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Alternative: Direct PostgreSQL connection (for server components only)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# ============================================================================
# DASHBOARD CONFIGURATION
# ============================================================================
# Refresh intervals (milliseconds)
NEXT_PUBLIC_REFRESH_INTERVAL_SIGNALS=60000
NEXT_PUBLIC_REFRESH_INTERVAL_MARKET_DATA=300000
NEXT_PUBLIC_REFRESH_INTERVAL_HEALTH=120000

# Feature flags
NEXT_PUBLIC_ENABLE_REALTIME=false
NEXT_PUBLIC_ENABLE_KNOWLEDGE_GRAPH=false
NEXT_PUBLIC_ENABLE_RESEARCH_MODULE=false

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_AUDIT_LOG=true

# ============================================================================
# DEPLOYMENT
# ============================================================================
NODE_ENV=development
