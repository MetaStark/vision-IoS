    "steps": {
      "step_1_regime_binding": {
        "action": "Pull regime from IoS-003",
        "bindings": ["regime_id", "regime_confidence", "regime_timestamp"],
        "conditional_action": {
          "if": "regime IN (VOLATILE, BROKEN)",
          "then": "Pre-arm IKEA sensitivity"
        }
      },
      "step_2_hypothesis_formation": {
        "actor": "EC-018 (Meta-Alpha)",
        "output": "Falsifiable hypothesis",
        "required_components": [
          "Explicit causal direction",
          "Explicit domain scope",
          "Explicit time sensitivity"
        ]
      },
      "step_3_chain_of_query_construction": {
        "actor": "EC-020 (SitC)",
        "output": "REASONING / SEARCH / VERIFICATION nodes",
        "pre_execution_check": {
          "metric": "Projected SitC-Chain Integrity",
          "threshold": 0.80,
          "below_threshold_action": "ABORT before execution"
        }
      },
      "step_4_information_acquisition": {
        "actor": "EC-021 (InForage)",
        "scope": "All retrieval operations",
        "deepseek_requirement": "MANDATORY for reasoning",
        "logging_fields": [
          "provider = deepseek",
          "tokens_in",
          "tokens_out",
          "cost",
          "source_tier (LAKE / PULSE / SNIPER)"
        ]
      },
      "step_5_hybrid_graphrag_retrieval": {
        "qdrant_role": "Semantic candidate set",
        "postgres_role": "1-2 hop expansion via fhq_graph.edges",
        "evidence_mapping_requirements": [
          "evidence_node_id",
          "ontology_concept_id",
          "SHA-256 hash"
        ]
      },
      "step_6_truth_boundary_enforcement": {
        "actor": "EC-022 (IKEA)",
        "action": "Classify every claim",
        "external_required_triggers": [
          "Freshness limits exceeded",
          "LAKE quota breached (> 30%)",
          "Regime volatility breached"
        ]
      },
      "step_7_g0_emission": {
        "actor": "FINN",
        "output_type": "Epistemic G0 proposal ONLY",
        "prohibited_content": [
          "Execution verbs (BUY, SELL, TRADE, EXECUTE)",
          "Specific targets",
          "Allocation recommendations"
        ]
      }
    }
  },

