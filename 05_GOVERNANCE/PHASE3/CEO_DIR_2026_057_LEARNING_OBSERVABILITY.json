  "executive_intent": {
    "purpose": "Make learning VISIBLE. Not inferred. Not buried in logs.",
    "principle": "The CEO must see at a glance WHAT the ACI is learning and HOW that learning changes system behavior over time",
    "mode": "Cognitive observability, not performance"
  },

  "dashboard_structure": {
    "name": "ACI Learning in Motion",
    "url_path": "/learning",

    "components": {
      "learning_progress_bar": {
        "description": "Primary visual showing learning maturity 0% to 100%",
        "anchors": {
          "28": "Pre-FMCL baseline",
          "80": "Current verified state",
          "90": "QG-F6 eligible",
          "100": "Paper trading authorized"
        },
        "update_cadence": "Daily",
        "data_source": "fhq_governance.v_learning_progress",
        "file": "dashboard-2026/components/learning/LearningProgressBar.tsx"
      },

      "daily_delta_panel": {
        "description": "What Did We Learn Today? - Max 5 bullet points",
        "format": "No prose. No fluff. Facts only.",
        "example_items": [
          "Closed 2 failure modes: REGIME_MISCLASSIFICATION -> sanity gate effective",
          "Reduced calibration gap in HIGH bucket by 3.1 pp",
          "New invariant discovered: volatility compression precedes regime flip"
        ],
        "data_source": "fhq_governance.v_daily_learning_delta",
        "file": "dashboard-2026/components/learning/DailyDeltaPanel.tsx"
      },

      "mechanism_panel": {
        "description": "How Did We Learn It? - One-line causality chain",
        "format": "Signal -> Reasoning -> Test -> Outcome",
        "purpose": "Makes Serper + LLM usage visible and justified",
        "data_source": "fhq_governance.learning_mechanism_log",
        "file": "dashboard-2026/components/learning/MechanismPanel.tsx"
      },

      "cognitive_activity_meters": {
        "description": "Three non-financial gauges",
        "gauges": {
          "search_activity": {
            "metrics": ["Queries/day", "Domains covered"],
            "source": "Serper"
          },
          "reasoning_intensity": {
            "metrics": ["Calls/day", "Tier used", "Purpose", "Cost today"],
            "source": "LLM"
          },
          "learning_yield": {
            "metrics": ["Failure modes closed", "Invariants created", "Suppression regret reduced"]
          }
        },
        "data_source": "fhq_governance.v_cognitive_activity",
        "file": "dashboard-2026/components/learning/CognitiveActivityMeters.tsx"
      }
    }
  },

